<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @cocktail.photo, crop: :fill %>');">
  <div class="container">
    <div class="centered">
      <h1> <%= @cocktail.name  %></h1>
    </div>
  </div>
</div>



<div class="container pt-3">
<h1>Ingredients</h1>

  <div class="cards">
    <% @cocktail.doses.each do |dose| %>
      <div class="card-category" style="background-color: #611B0A">
        <div style="text-align: center"><%= dose.ingredient.name %> <br>
        <%= dose.description %>
        <%= link_to dose_path(dose),
        method: :delete,
        data: { confirm: "Are you sure?" } do %>
          <i class="fas fa-trash-alt"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

<h2 class="mt-5">Add an ingredient</h2>
<%= simple_form_for [@cocktail, @dose] do |f| -%>
  <%= f.input :description %>
  <%= f.association :ingredient %>
  <div class="d-flex">
    <%= f.submit "Add ingredient", class: "p-3 h1 mr-3 my-3 btn btn-primary w-50" %>
    <%= link_to "Back to cocktails", cocktails_path, class: "p-3 h1 ml-3 my-3 btn btn-primary w-50"  %>
  </div>
<% end -%>

</div>
